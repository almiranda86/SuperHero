# Environment variables example
# Copy this file to .env and fill with your actual values

# Hero API Configuration (Get your token at https://superheroapi.com)
HERO_API_TOKEN=your_token_here
HERO_API_URL=https://superheroapi.com/api/

# Database
DATABASE_URL=file:./dev.db

# Server
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ (for future implementation)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest

# MongoDB
MONGODB_URI=mongodb://localhost:27017/HeroesDB
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=your_mongo_password
MONGO_INITDB_DATABASE=HeroesDB
MONGO_APP_USER=superhero_app
MONGO_APP_PASSWORD=your_app_password

# Mongo Express (Database UI)
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASS=your_mongoexpress_password
