{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Redis": {
    "ConnectionString": "your_redis_host:6379",
    "ConnectionStringName": "Redis",
    "InstanceName": "SuperHero_",
    "ExpireInMinutes": 2
  },
  "MongoDB": {
    "ConnectionURI": "mongodb://your_user:your_password@your_host:27017",
    "DatabaseName": "HeroesDB",
    "CollectionName": "Heroes"
  },
  "HeroAPI": {
    "ApiToken": "your_hero_api_token_here",
    "ApiURL": "https://superheroapi.com/api/"
  },
  "RabbitMQ": {
    "ConnectionURI": "amqp://your_user:your_password@your_host:5672",
    "Queues": [
      "hero",
      "hero_cache"
    ],
    "ConsumeDelayInMilliseconds": 60000
  },
  "Security": {
    "TokenConfigurations": {
      "Audience": "YourAudience",
      "Issuer": "YourIssuer",
      "Seconds": 60,
      "SecretJwtKey": "your_base64_encoded_jwt_secret_here"
    },
    "UserRoles": {
      "Roles": [ "ROOT_API_ACCESS" ]
    },
    "RootAuthUsers": {
      "AuthUsers": [
        {
          "UserName": "your_username",
          "password": "your_secure_password_here",
          "Roles": [ "ROOT_API_ACCESS" ]
        }
      ]
    }
  }
}
